# ========================================
# TAREA A: Gestión Segura de Credenciales
# ========================================
# NUNCA commiteemos estas claves - usar variables de entorno en plataformas de deployment
# Telegram Bot Configuration
TELEGRAM_BOT_TOKEN=your_telegram_bot_token_here

# LLM / OpenAI (TAREA A - Secret Protection)
# Prefer storing this as a platform secret rather than in .env
OPENAI_API_KEY=your_openai_api_key_here

# ========================================
# TAREA B: Gestión de Secretos en Deployment
# ========================================
# Vector Store Configuration
VECTOR_STORE_URL=your_vector_store_url
VECTOR_STORE_API_KEY=your_vector_store_api_key

# LLM Configuration
LLM_API_KEY=your_llm_api_key
LLM_MODEL=gpt-4-vision

# Python Microservice (for embeddings)
EMBEDDINGS_SERVICE_URL=http://localhost:8000

# ========================================
# TAREA D: Implementación de Autenticación
# ========================================
# Lista de IDs de usuarios autorizados (comma-separated)
AUTHORIZED_USERS=123456789,987654321
AUTH_ENABLED=true

# ========================================
# TAREA E: No Repudio (Logging Detallado)
# ========================================
LOG_LEVEL=info
LOG_FILE_PATH=./logs/app.log
ENABLE_AUDIT_LOG=true
AUDIT_LOG_FILE=./logs/audit.log

# ========================================
# TAREA G: Rate Limiting por Usuario
# ========================================
RATE_LIMIT_ENABLED=true
RATE_LIMIT_MAX_REQUESTS=10
RATE_LIMIT_WINDOW_MS=60000
RATE_LIMIT_PER_HOUR=50

# ========================================
# TAREA H: Gestión Efímera de Datos
# ========================================
# Image / temp file retention (hours). For maximal privacy set to 0 to delete immediately after processing.
IMAGE_RETENTION_HOURS=0
TEMP_FILES_CLEANUP_INTERVAL=3600000

# ========================================
# TAREA I: Sanitización y Validación de Input
# ========================================
MAX_FILE_SIZE_MB=10
ALLOWED_FILE_TYPES=image/png,image/jpeg,application/pdf
VALIDATE_MAGIC_BYTES=true

# ========================================
# Configuración General
# ========================================
NODE_ENV=development
PORT=3000
DATABASE_URL=postgresql://user:password@localhost:5432/database
DEBUG=false


